{% extends 'EDTBundle::layoutAdmin.html.twig' %}

{% block admin_body %}

<h3>Formulaire étudiant</h3>

{# <div class="row">{{ form(form) }}</div> #}

<div class="row">

	{{ form_start(form, {'attr': {'class': 'form'}}) }}

	{# Les erreurs générales du formulaire. #}
	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.numEtudiant, "Numéro étudiant : ", {'label_attr': {'class': 'control-label'}}) }}
		{{ form_widget(form.numEtudiant, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.numEtudiant) }} 	{# Affichage des erreurs pour ce champ précis. #}
	</div>

	<div class="form-group">
		{{ form_label(form.email, "Adresse mail : ", {'label_attr': {'class': 'control-label'}}) }}
		{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.email) }} 	{# Affichage des erreurs pour ce champ précis. #}
	</div>

	<div class="form-group">
		{{ form_label(form.username, "Nom : ", {'label_attr': {'class': 'control-label'}}) }}
		{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.username) }} 	{# Affichage des erreurs pour ce champ précis. #}
	</div>

	<div class="form-group">
		{{ form_label(form.plainPassword.children['first'], "Mot de passe : ", {'label_attr': {'class': 'control-label'}}) }}
		{{ form_widget(form.plainPassword.children['first'], {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.plainPassword.children['first']) }} 	{# Affichage des erreurs pour ce champ précis. #}
	</div>

	<div class="form-group">
		{{ form_label(form.plainPassword.children['second'], "Confirmer le mot de passe : ", {'label_attr': {'class': 'control-label'}}) }}
		{{ form_widget(form.plainPassword.children['second'], {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.plainPassword.children['second']) }} 
	</div>

	<div class="form-group">
		{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
	</div>

	{{ form_end(form)}}

</div>

{% endblock %}
